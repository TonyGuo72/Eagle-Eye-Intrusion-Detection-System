.container { 
 
  height: 100%; 
 
  display: flex; 
 
  flex-direction: column; 
 
  padding: 0; 
 
  box-sizing: border-box; 
 
  background-color: #F2F2F2
 
 } 

 .addBtn { 
  width: 50%; 
  margin-top: 0px; 
  margin-left:0px;
  float:left;
  background-color: #006650;
 }

 .modifyBtn { 
  width: 50%; 
  margin-top: 0px; 
  margin-right:0px;
  float:right;
