<!--pages/userinfo/userinfo.wxml-->
<view class="top-icon"> 

<image class="top-img" src="images/EElogo.png"></image> 

</view>
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">设置</h2>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells">
					<a class="weui-cell weui-cell_access">
						<view class="weui-cell__bd"><view>账号与安全</view></view>
						<view class="weui-cell__ft"></view>
					</a>
					<a class="weui-cell weui-cell_access">
						<view class="weui-cell__bd"><view>关于我们</view></view>
						<view class="weui-cell__ft"></view>
					</a>
					<a class="weui-cell weui-cell_access">
						<view class="weui-cell__bd"><view>帮助与反馈</view></view>
						<view class="weui-cell__ft"></view>
					</a>
				</view>
			</view>
		</view>
	</view>
</view>

<view class="button-sp-area cell">
	<a class="weui-btn_cell weui-btn_cell-warn" bindtap="logout">退出登录</a>
</view>
